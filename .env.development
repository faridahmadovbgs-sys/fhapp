# Development Environment Variables

# Server Configuration
NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/fhapp_dev

# JWT Secret (Development only)
JWT_SECRET=dev_jwt_secret_key_not_for_production

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=

# CORS Configuration
CLIENT_URL=http://localhost:3000

# Email Configuration (Development)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=dev@localhost

# Admin Configuration
INITIAL_ADMIN_EMAIL=admin@localhost

# Security (Less strict for development)
BCRYPT_ROUNDS=10
SESSION_SECRET=dev-session-secret
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app-dev.log